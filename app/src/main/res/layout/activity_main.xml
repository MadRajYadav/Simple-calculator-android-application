<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="250dp"
       android:layout_weight="1"
       android:orientation="vertical">
      <EditText
          android:id="@+id/edt_input"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="2.5"
          android:backgroundTint="@color/white"
          android:text=""
          android:textSize="30dp"
          android:inputType="numberDecimal"
          android:textColor="@color/black"
          android:gravity="right|bottom"
          android:enabled="false"
          />

      <EditText
          android:id="@+id/edt_result"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:enabled="false"
          android:backgroundTint="#191616"
          android:text=""
          android:textSize="30dp"
          android:textColor="#F80202"
          android:gravity="right|bottom"
         />

   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="96dp"
       android:layout_weight="1">
      <TextView
          android:id="@+id/txt_clear"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="C"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />
      <TextView
          android:id="@+id/txt_percent"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="%"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />

      <TextView
          android:id="@+id/txt_cancel"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="โซ"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />
      <TextView
          android:id="@+id/txt_divide"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="รท"
          android:background="@drawable/round"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:layout_margin="5dp"
          android:clickable="true"
          />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="96dp"
       android:layout_weight="1">
      <TextView
          android:id="@+id/txt_seven"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="7"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />
      <TextView
          android:id="@+id/txt_eight"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="8"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />

      <TextView
          android:id="@+id/txt_nine"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="9"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />
      <TextView
          android:id="@+id/txt_multiply"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="x"
          android:background="@drawable/round"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:layout_margin="5dp"
          android:clickable="true"
          />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="96dp"
       android:layout_weight="1">
      <TextView
          android:id="@+id/txt_four"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="4"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />
      <TextView
          android:id="@+id/txt_five"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="5"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />

      <TextView
          android:id="@+id/txt_six"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="6"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />
      <TextView
          android:id="@+id/txt_minus"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="-"
          android:background="@drawable/round"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:layout_margin="5dp"
          android:clickable="true"
          />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="96dp"
       android:layout_weight="1">
      <TextView
          android:id="@+id/txt_one"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="1"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />
      <TextView
          android:id="@+id/txt_two"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="2"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />

      <TextView
          android:id="@+id/txt_three"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="3"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />
      <TextView
          android:id="@+id/txt_plus"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="+"
          android:background="@drawable/round"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:layout_margin="5dp"
          android:clickable="true"
          />
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="96dp"
       android:layout_weight="1">
      <TextView
          android:id="@+id/txt_double_zero"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="00"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />
      <TextView
          android:id="@+id/txt_zero"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="0"
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />

      <TextView
          android:id="@+id/txt_point"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="."
          android:textSize="40dp"
          android:textColor="@color/black"
          android:gravity="center"
          android:clickable="true"
          />
      <TextView
          android:id="@+id/txt_equal_to"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="="
          android:background="@drawable/round"
          android:backgroundTint="@color/purple_700"
          android:textSize="40dp"
          android:textColor="@color/white"
          android:gravity="center"
          android:layout_margin="5dp"
          android:clickable="true"
          />
   </LinearLayout>


</LinearLayout>